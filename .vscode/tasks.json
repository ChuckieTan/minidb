    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": [".."],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        }, {
            "label": "make",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        }, {
        "label": "build",
        "dependsOn": [
            "cmake",
            "make"
        ]
    }

    ]
}